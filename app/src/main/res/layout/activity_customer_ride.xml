<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CRAtvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Type"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CRAtvPickUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Penjemputan :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/CRAetPickUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"

                android:ems="10"
                android:hint="Masukkan alamat penjemputan"
                android:inputType="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CRAtvDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Tujuan :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/CRAetDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Masukkan alamat tujuan"
                android:inputType="text"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CRAtvFare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarif :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CRAtvFareValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/CRAbtnOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</layout>